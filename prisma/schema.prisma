generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  // provider = "postgresql"
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String @id @default(cuid()) @unique
  name      String
  email     String @unique
  password  String
  role      Role      @default(USER)
  contexts  Context[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Context {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  title     String
  tags      Tag[]
  context   String
  isPublic  Boolean
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Tag {
  id        Int       @id @default(autoincrement())
  contexts  Context[]
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}